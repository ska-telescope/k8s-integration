[Service]
MountFlags=shared
ExecStart=
ExecStart=/usr/bin/dockerd -H unix:///var/run/docker.sock \
          --log-driver=journald \
          --storage-driver=overlay2 \
          --log-opt tag="img={{ '{{' }}.ImageName{{ '}}' }} name={{ '{{' }}.Name{{ '}}' }} cid={{ '{{' }}.ID{{ '}}' }}" \
          --label nodetype={{ inventory_hostname }} --experimental=true \
          --metrics-addr=0.0.0.0:9323 --insecure-registry=localhost:5000
